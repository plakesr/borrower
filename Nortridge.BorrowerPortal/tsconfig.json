{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "strictNullChecks": true,
    "outDir": "app/dist",
    "baseUrl": "app/src",
    "paths": {
      "shared/*": [ "shared/*" ],
      "components/*": [ "components/*" ]
    },
    "typeRoots": [ "./app/src/types", "./node_modules/@types" ]
  },
  "exclude": [
    "node_modules",
    "wwwroot/dist"
  ]
}
