<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BorrowerPortal</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/dist/main.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/dist/main.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="main__wrapper main__wrapper--entry">

        <div class="main__content--entry">
            <header class="header header--entry">
                <a class="navbar--brand d-flex align-items-center" href="#">
                    <img class="header__logo" src="~/images/header-logo.svg" alt="">
                    <div class="header__name">COMPANY <br> NAME</div>
                </a>
            </header>

            @RenderBody()

            </div>
        </div>

        <environment include="Development">
            <script src="~/dist/vendors.js"></script>
            <script src="~/dist/main.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/dist/vendors.js" asp-append-version="true"></script>
            <script src="~/dist/main.js" asp-append-version="true"></script>
        </environment>
</body>
</html>
