@model LoginViewModel

<h2 class="page__title">@Localizer["Login"]</h2>

<form method="post" asp-page-handler="">
    <p class="text--help mb-1">@Localizer["Enter your username and password"]</p>
    <div asp-validation-summary="All" class="text--error"></div>

    <div class="form__row--custom mt-2">
        <div class="form-group mb-0">
            <input asp-for="Username" class="form-control form-control--custom" />
            <label asp-for="Username" class="label--top">@Localizer["Username"]</label>
        </div>

        <div class="form-group mb-0">
            <input asp-for="Password" class="form-control form-control--custom" />
            <label asp-for="Password" class="label--top">@Localizer["Password"]</label>
            <a asp-page="/Account/ForgotPassword/Index" class="btn btn__text--small mt-2">
                @Localizer["forgot password"]
            </a>
        </div>

        <button class="btn btn__solid" type="submit">@Localizer["Login"]</button>
    </div>
</form>

<div class="checkbox d-block mt-2">
    <label class="m-0">
        <input type="checkbox" value="true">
        <span class="cr">
            <i class="cr-icon icon-check"></i>
        </span>
        <span>@Localizer["Remember my credentials"]</span>
    </label>
</div>
